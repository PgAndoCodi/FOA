<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:targetApi="21"
    android:elevation="4dp"
    app:cardCornerRadius="4dp"
    app:layout_collapseParallaxMultiplier="1"
    android:layout_marginLeft="@dimen/margin_cart_recycler_view"
    android:layout_marginRight="@dimen/margin_cart_recycler_view"
    android:layout_marginStart="@dimen/margin_cart_recycler_view"
    android:layout_marginEnd="@dimen/margin_cart_recycler_view"
    android:layout_marginBottom="@dimen/margin_cart_recycler_view"
    android:padding="8dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cart_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView android:id="@+id/cart_image"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:contentDescription="@string/cart_item_image"
            android:padding="16dp"
            android:tint="@color/colorAccent"
            android:background="@drawable/shape_circle"
            android:backgroundTint="@color/colorAccent"
            tools:src="@drawable/ic_restaurant_menu"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View android:id="@+id/guideline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toTopOf="@id/cart_image"
            app:layout_constraintBottom_toBottomOf="@id/cart_image" />

        <TextView android:id="@+id/cart_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/guideline"
            app:layout_constraintStart_toEndOf="@id/cart_image"
            app:layout_constraintEnd_toStartOf="@id/cart_price"
            tools:text="Chilly Chowmein" />

        <TextView android:id="@+id/cart_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@id/guideline"
            app:layout_constraintStart_toEndOf="@id/cart_image"
            tools:text="Quantity 4 plate" />

        <TextView android:id="@+id/cart_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="normal"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/guideline"
            tools:text="Rs. 450" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>